= form_for @leg do |f|
  - if @leg.errors.any?
    #error_explanation
      %h2= "#{pluralize(@leg.errors.count, "error")} prohibited this leg from being saved:"
      %ul
        - @leg.errors.full_messages.each do |msg|
          %li= msg

  .current-leg-score
    = @leg.score

  .actions
    - (1..20).each do |score_field|
      = link_to score_field, '', remote: true, class: 'score-field'
