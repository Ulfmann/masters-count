= form_for @leg do |f|
  - if @leg.errors.any?
    #error_explanation
      %h2= "#{pluralize(@leg.errors.count, "error")} prohibited this leg from being saved:"
      %ul
        - @leg.errors.full_messages.each do |msg|
          %li= msg

  .current-leg-score#leg-score{ data: { id: @leg.id } }
    = @leg.score

  .actions
    = render partial: 'score_fields'
